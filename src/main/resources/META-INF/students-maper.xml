<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igor2i.students.modules.pojo.university.interfaces.IStudentsMaper">
    <select id="getStudentById"
            parameterType="java.lang.Integer"
            resultMap="student">
        SELECT id, name, birthdate, sex, id_group FROM student WHERE id=#{id}
    </select>

    <resultMap id="student" type="com.igor2i.students.modules.pojo.university.objects.Student">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="idGroup" column="id_group"/>
        <result property="birthdate" column="birthdate"/>
        <result property="sex" column="sex"/>
    </resultMap>
</mapper>